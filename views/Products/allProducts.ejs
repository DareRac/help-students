<% layout('layouts/boilerplate.ejs')%>
<link rel="stylesheet" href="/stylesheets/products.css" />

<div class="button-container">
  <a class="filter-button">All</a>
  <a class="filter-button">Electronics</a>
  <a class="filter-button">Living</a>
  <a class="filter-button">Sports</a>
  <a class="filter-button">Stationary</a>
  <a class="filter-button">Others</a>
</div>

<div class="section-center">
  <% for(let product of products){ %>
  <article class="menu-item">
    <img
      src="<%= product.image[0].url %>"
      alt="<%= product.title %>"
      class="photo"
    />
    <div class="item-info">
      <header>
        <h4><%= product.title %></h4>
        <h4 class="price">â‚¹<%= product.price %></h4>
      </header>
      <p class="item-text"><%= product.category %></p>
      <a
        href="showProduct/<%= product._id %>"
        class="btn btn-outline-info col-8 offset-2 mt-4"
        >Show Product</a
      >
    </div>
  </article>
  <% } %>
</div>
